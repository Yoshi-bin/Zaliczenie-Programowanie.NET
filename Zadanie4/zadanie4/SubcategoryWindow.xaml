<Window x:Class="Zadanie4.SubcategoryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="SubcategoryWindow" Height="350" Width="525">
    <Grid>
        <StackPanel>
            <TextBlock Name="SubcategoryDetails" />
            <DataGrid Name="ItemsDataGrid" AutoGenerateColumns="False">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Name" Binding="{Binding Name}" />
                    <DataGridTextColumn Header="Year" Binding="{Binding Year}" />
                    <DataGridTextColumn Header="EngineCapacity" Binding="{Binding EngineCapacity}" />
                    <DataGridTextColumn Header="DriveType" Binding="{Binding DriveType}" />
                </DataGrid.Columns>
            </DataGrid>
        </StackPanel>
    </Grid>
</Window>
